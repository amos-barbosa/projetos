programa
{
	funcao inicio()
	{
		cadeia cesta[][]={{"pera","100"},{"jaca","200"},{"maça","400"},{"laranja","750"}}
		inteiro contador=0

				faca{
					escreva("Produto: " + cesta[contador][0] + " Quantidade " + cesta[contador][1] + "\n")
					contador++
				}enquanto(contador<=3)
		
	}
}
