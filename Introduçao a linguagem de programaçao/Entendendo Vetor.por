programa
{
	funcao inicio()
	{
		cadeia frutas[4]
		inteiro contador =0
		frutas[0] = "Maça"
		frutas[1] = "Pera"
		frutas[2] = "Uva"
		frutas[3] = "laranja"

		// escreva (frutas[3])
		faca{
			escreva (frutas[contador] + "\n")
			contador ++
		}enquanto (contador<=3)
	}
	
}
